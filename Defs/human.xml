<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--Paste-->
    <ThingDef ParentName="MealNutrientPaste">
        <defName>MealNutrientPasteHuman</defName>
        <label>nutrient paste (human)</label>
        <description>A sticky slime...made from human meat. You don't even want to think about what the tube it comes in is made out of.</description>
        <ingestible>
            <preferability>MealAwful</preferability>
            <tasteThought>AteNutrientPasteMeal</tasteThought>
            <tasteThought>AteNutrientPasteHuman</tasteThought>
            <tasteThought>AteNutrientPasteHumanAsCannibal</tasteThought>
            <ingestEffect>EatMeat</ingestEffect>
            <ingestSound>Meal_Eat</ingestSound>
        </ingestible>
    </ThingDef>

    <ThoughtDef>
        <defName>AteNutrientPasteHuman</defName>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <nullifyingTraits>
            <li>Cannibal</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>ate human meat-paste</label>
                <description>Not only did I consume nutrient-paste from a tube, but it was made from human meat. People. Were they my friend who died, or that prisoner we executed? I wish the gear-oil hid the...other taste more.</description>
                <baseMoodEffect>-20</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>AteNutrientPasteHumanAsCannibal</defName>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <requiredTraits>
            <li>Cannibal</li>
        </requiredTraits>
        <stages>
            <li>
                <label>nutrient-paste cannibalism</label>
                <description>I consumed nutrient-paste made from another human. If only I could have cooked it myself instead of letting this machine prepare it!</description>
                <baseMoodEffect>13</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>


    <!--Brick-->
    <ThingDef ParentName="MealNutrientBrick">
        <defName>MealNutrientBrickHuman</defName>
        <label>nutrient brick (human)</label>
        <description>A crumbly brick of dehydrated nutrient paste...made from human meat. You don't even want to think about what the wrapper it comes in is made out of.</description>
        <ingestible>
            <preferability>MealAwful</preferability>
            <tasteThought>AteNutrientBrickMeal</tasteThought>
            <tasteThought>AteNutrientBrickHuman</tasteThought>
            <tasteThought>AteNutrientBrickHumanAsCannibal</tasteThought>
            <ingestEffect>EatMeat</ingestEffect>
            <ingestSound>Meal_Eat</ingestSound>
        </ingestible>
    </ThingDef>

    <ThoughtDef>
        <defName>AteNutrientBrickHuman</defName>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <nullifyingTraits>
            <li>Cannibal</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>ate human meat-brick</label>
                <description>Not only did I consume a crumbly, burnt nutrient-brick, but it was made from human meat. People. Were they my friend who died, or that prisoner we executed? I wish the gear-oil and burnt flavor hid the...other taste more.</description>
                <baseMoodEffect>-20</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>AteNutrientBrickHumanAsCannibal</defName>
        <showBubble>true</showBubble>
        <icon>Things/Mote/ThoughtSymbol/Food</icon>
        <durationDays>1</durationDays>
        <requiredTraits>
            <li>Cannibal</li>
        </requiredTraits>
        <stages>
            <li>
                <label>nutrient-paste cannibalism</label>
                <description>I consumed nutrient-brick made from another human. If only I could have cooked it myself; This machine even burned it!</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>